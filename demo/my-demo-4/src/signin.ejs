<%- include('common/header') %>
    
  <div class="sign">
    <% if (typeof(msg) !== 'undefined' && msg) { %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert" href="javascript:;">&times;</a>
      <strong><%= msg %></strong>
    </div>
    <% } %>

    <form class="form-horizontal" action="/signin" method="post" enctype="application/x-www-form-urlencoded">
      <div class="control-group">
        <label class="control-label" for="login_name">用户名</label>
        <div class="controls">
          <% if (typeof(name) !== 'undefined') { %>
            <input class="input-xlarge" size="30" type="text" value="<%= nname %>" name="login_name"/>
            <% } else { %>
            <input class="input-xlarge" size="30" type="text" value="" name="login_name"/>
          <% } %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="login_password">密码</label>
        <div class="controls">
          <input class="input-xlarge" size="30" type="password" name="login_password"/>
        </div>
      </div>
      <div class="form-actions">
        <input type="submit" class="span-primary" value="登录"/>
      </div>
    </form>
  </div>

<%- include('common/footer') %>
